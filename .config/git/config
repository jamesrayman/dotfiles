# vim: noet:sw=8
[include]
	path = ~/.config/git/extra
[user]
	email = james@jamesrayman.com
	name = James Rayman
[init]
	defaultBranch = main
[pull]
	rebase = true
[alias]
	a = add
	b = branch
	c = commit
	d = diff
	f = fetch
	l = log --oneline -10
	p = push
	pf = push --force-with-lease
	s = status --short
	ll = log --oneline
	ch = checkout
	graph = log --all --graph --decorate --oneline
	gr = graph
	fd = ls-tree -r HEAD --name-only
	ls = fd
	tree = fd
[rerere]
	enabled = true
[column]
	ui = auto
[branch]
	sort = -committerdate
[merge]
	conflictstyle = diff3
[core]
	untrackedcache = true
	pager = delta
[diff]
	colorMoved = default
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
[commit]
	gpgSign = true
[tag]
	gpgSign = true
