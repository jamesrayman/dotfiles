# vim: noet:sw=8
[include]
	path = ~/.config/git/extra
[user]
	email = james@jamesrayman.com
	name = James Rayman
[init]
	defaultBranch = main
[pull]
	rebase = true
[fetch]
	prune = true
[rebase]
	updateRefs = true
[alias]
	a = add
	b = branch
	fd = feature-diff
	c = commit
	ca = commit --amend --no-edit
	ce = commit --allow-empty
	d = diff
	f = fetch
	l = log --oneline -10
	p = push
	pf = push --force-with-lease
	s = status --short
	ll = log --oneline
	sw = switch
	gr = graph
	ls = ls-tree -r HEAD --name-only
	rp = rebase-parent
	tree = ls
	web = instaweb
	unadd = restore --staged
	graph = log --all --graph --decorate --oneline
	root = rev-parse --show-toplevel
	feature-diff = !git diff "$(git feature-base)"
	feature-base = !git merge-base "$(git parent)" HEAD
	rebase-parent = !git rebase "$(git parent)"
[rerere]
	enabled = true
[column]
	ui = auto
[branch]
	sort = -committerdate
[merge]
	conflictstyle = diff3
[core]
	untrackedcache = true
	abbrev = 8
[diff]
	colorMoved = default
[commit]
	verbose = true
	gpgSign = true
[tag]
	gpgSign = true
[log]
	date = iso
