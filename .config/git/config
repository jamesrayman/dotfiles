# vim: noet:sw=8
[include]
	path = ~/.config/git/extra
[user]
	email = james@jamesrayman.com
	name = James Rayman
[init]
	defaultBranch = main
[pull]
	rebase = true
[rebase]
	updateRefs = true
[alias]
	a = add
	b = branch
	fd = feature-diff
	feature-diff = !git diff $(git merge-base main HEAD)
	c = commit
	d = diff
	f = fetch
	l = log --oneline -10
	p = push
	pf = push --force-with-lease
	s = status --short
	ll = log --oneline
	sw = switch
	graph = log --all --graph --decorate --oneline
	gr = graph
	ls = ls-tree -r HEAD --name-only
	tree = ls
	web = instaweb
	unadd = restore --staged
[rerere]
	enabled = true
[column]
	ui = auto
[branch]
	sort = -committerdate
[merge]
	conflictstyle = diff3
[core]
	untrackedcache = true
	pager = delta
	abbrev = 8
[diff]
	colorMoved = default
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
[commit]
	gpgSign = true
[tag]
	gpgSign = true
[log]
	date = iso
