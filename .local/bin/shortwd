#!/usr/bin/env bash

set -euo pipefail

wd="${PWD/"$HOME"/\~}"
IFS='/' wd_parts=($wd)
len="${#wd}"

i=0
while [[ $len -gt $SHORTWD_MAX_LEN ]] && [[ $i -lt $((${#wd_parts[@]} - 1)) ]]
do
    len=$((len - ${#wd_parts[$i]} + 1))
    wd_parts[$i]=${wd_parts[$i]:0:1}
    i=$((i+1))
done

IFS='/' wd="${wd_parts[*]}"

if [[ $len -gt $SHORTWD_MAX_LEN ]]
then
    wd="â€¦${wd: -$((SHORTWD_MAX_LEN-1))}"
fi

if [[ -n "${SHORTWD_PAD-}" ]]
then
    printf "%-${SHORTWD_MAX_LEN}s" "${wd:-/}"
else
    printf '%s' "${root-}${wd:-/}"
fi
