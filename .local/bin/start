#!/bin/sh

if [ "$#" -eq "0" ]
then
    printf "start: missing argument\n" >&2
    exit 1
fi

ret=0

for file in "$@"
do
    if case "$file" in 'http://'*) false;; 'https://'*) false;; *) [ ! -e "$file" ] ;; esac;
    then
        printf "start: file \`%s' does not exist\n" "$file" >&2
        ret=1
    else
        xdg-open "$file" &> /dev/null &
    fi
done

exit $ret
